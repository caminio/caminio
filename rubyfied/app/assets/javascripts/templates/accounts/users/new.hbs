<section>

  <form class="form form-horizontal" {{action 'create' on='submit'}}>

    <div class="view-actions align-right">
      {{#link-to 'accounts.users' class='btn btn-transparent'}}
        <i class="fa fa-angle-left"></i>
        {{t 'back'}}
      {{/link-to}}
      <button class="btn btn-success icon-text" {{action 'create'}}>
        <i class="fa fa-envelope"></i> {{t 'invite'}}
      </button>
    </div>

    <div class="alert alert-info">
      <i class="fa fa-question"></i>
      {{t 'accounts.users.invite_desc'}}
    </div>

    <div {{bind-attr class=":form-group errors.email:field-with-errors"}}>
      <label class="col-md-4 control-label">{{t 'email'}}</label>
      <div class="col-md-8">
        {{input value=email class="form-control js-get-focus"}}
        <div {{bind-attr class=":help-block errors.email::hide"}}>{{errors.email}}</div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label">{{t 'language'}}</label>
      <div class="col-md-8">
        {{view Ember.Select2 value=locale content=availableLangs search=false prompt=false}}
        <div class="help-block">{{t 'accounts.users.lang_help'}}</div>
      </div>
    </div>

  </form>

</section>
