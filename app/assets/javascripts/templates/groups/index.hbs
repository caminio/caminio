<nav class="content-nav">
  <header class="app-header">
    <div class="app-btn-group">
      <a href="#" {{action 'toggleFollow' 'groups'}}
        {{translateAttr data-hint='groups.follow'}}
        class="hint--bottom hint--bounce">
        <i class="fa fa-rss"></i>
      </a>
    </div>
    <div class="app-title">{{t 'groups.title'}}</div>
  </header>

  <section>

    {{#link-to 'groups.new' class='btn btn-default btn-sm icon-text'}}
      <i class="fa fa-plus"></i>
      {{t 'groups.new'}}
    {{/link-to}}

    <hr>

    <div {{bind-attr class=":search filter:active"}}>
      <i class="fa fa-search"></i>
      {{#if filter}}<i class="fa fa-times" {{action 'clearFilter'}}></i>{{/if}}
      {{input value=filter placeholderTranslation='group.search'}}
    </div>
  </section>

</nav>

<section class="content">

  <ul class="list list-header">
    <li>
    <div class="list-icon"></div>
    <div class="list-title">{{t 'name'}}</div>
    <div class="list-col">{{t 'group.members'}}</div>
    <div class="list-date">{{t 'created_at'}}</div>
    <div class="list-actions"></div>
    </li>
  </ul>
  <ul class="list">
    {{#each group in filteredContent}}
    <li {{action 'editGroup' group}}>
    <div class="list-icon">
      <label class="label label-default">
        <i class="fa fa-group"></i>
      </label>
    </div>
    <div class="list-title">{{group.name}}</div>
    <div class="list-col">{{t 'group.num_members' countBinding='group.users.length'}}</div>
    <div class="list-date">{{formatDate group.created_at}}</div>
    <div class="list-actions dropdown">
      <button class="btn btn-pale dropdown-toggle" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></button>
      <ul class="dropdown-menu dropdown-menu-grey pull-right">
        <li>{{#link-to 'groups.edit' group}}{{t 'group.edit'}}{{/link-to}}</li>
        <li>{{#link-to 'groups.members' group}}{{t 'group.edit_members'}}{{/link-to}}</li>
        <li><a class="hover-danger" href="#" {{action 'deleteGroup' group}}>{{t 'group.delete'}}</a></li>
      </ul>
    </div>
    </li>
    {{/each}}
  </ul>
</section>
