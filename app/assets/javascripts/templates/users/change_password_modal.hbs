<div class="modal-dialog">
  <div class="modal-content">
    <header class="modal-header">
      <button class="close" data-dismiss='modal'>&times;</button>
      {{t 'user.change_password'}}
    </header>
    <section class="modal-body">
      <form class="form" {{action 'change_password'}}>
        {{#if controller.isCurrent}}
        <div class="form-group">
          <label class="desc">{{t 'user.current_password'}} <span class="required">*</span></label>
          {{input type='password' required='true' value=old_password class="form-control js-get-focus"}}
        </div>
        {{/if}}

        <div class="form-group">
          <label class="desc">{{t 'user.new_password'}} <span class="required">*</span></label>
          {{input type='password' required='true' value=new_password class="form-control"}}
        </div>

        <div class="form-group">
          <label class="desc">{{t 'user.repeat_new_password'}} <span class="required">*</span></label>
          {{input type='password' required='true' value=confirm_new_password class="form-control"}}
        </div>
      </form>
    </section>
    <footer class="modal-footer">
      <input type="submit" class="hide">
      <a href="#" class="btn btn-default" data-dismiss='modal'>{{t 'cancel'}}</a>
      <button class="btn btn-primary" {{action 'change_password'}}>{{t 'user.change_password'}}</button>
    </footer>
  </div>
</div>