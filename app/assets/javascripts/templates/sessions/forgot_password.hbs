<div class="login-box">
  <div class="login-logo-wrap">
    <div class="login-logo"></div>
  </div>
  <form {{action 'send_email' on='submit'}}>

    {{#if errorMessage}}
    <div class="alert alert-danger">{{{errorMessage}}}</div>
    {{else}}
    <div class="alert alert-info">
      {{{message}}}
    </div>
    {{/if}}

    <div class="form-group">
      {{input value=email class="form-control" autocapitalize="off" autocorrect="off" placeholderTranslation="email_address"}}
    </div>

    <div class="form-group align-right">
      {{#link-to 'sessions.new'}}
        {{t 'cancel'}}
      {{/link-to}}
      <button class="btn btn-success" type="submit">
        {{t 'send_email'}}
      </button>
    </div>

  </form>
</div>
