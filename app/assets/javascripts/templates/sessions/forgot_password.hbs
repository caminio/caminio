<form {{action 'send_email' on='submit'}}>

  <div class="form-group">
    {{input value=email class="form-control" autocapitalize="off" autocorrect="off" placeholderTranslation="email_address"}}
  </div>

  <div class="form-group align-right">
    {{#link-to 'sessions.new' class="cancel"}}
    {{t 'cancel'}}
    {{/link-to}}
    <button class="btn btn-success" type="submit">
      {{t 'send_email'}}
    </button>
  </div>

</form>
