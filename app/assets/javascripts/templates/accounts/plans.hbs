<section>
  <form class="form-horizontal" {{action 'save' on='submit'}}>
    <table class="table">
      <thead>
        <tr>
          <th>{{t 'accounts.plan.app_name'}}</th>
          <th>{{t 'accounts.plan.name'}}</th>
          <th>{{t 'accounts.plan.collaborators'}}</th>
          <th>{{t 'accounts.plan.quota'}}</th>
          <th>{{t 'accounts.plan.access'}}</th>
          <th>{{t 'accounts.plan.price'}}</th>
        </tr>
      </thead>
      <tbody>
      {{#each apps}}
      <tr>
        <td>{{name}}</td>
        <td>
          {{view Ember.Select value=selectedPlan content=app_plans optionValuePath='content.id' optionLabelPath='content.name' noSearch=true prompt=false}}
        </td>
        <td>
          <div class="progress">
            <div class="progress-bar" {{bind-attr style=usersQuota}}>
              {{collaborators}} / {{user_quota}}
            </div>
          </div>
        </td>
        <td></td>
        <td></td>
      </tr>
      {{/each}}
      </tbody>
    </table>
  </form>
</section>
