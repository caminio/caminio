<section class="content-panel-section">

  <div class="page-ctrl contacts-ctrl">
    <div class="title">
      {{t 'accounts.api.title'}}
    </div>

    <div class="btn-group">
      <button class="btn btn-primary" {{translateAttr title='accounts.api.generate_new'}} {{action 'new'}}>
        <i class="fa fa-plus"></i>
      </button>
    </div>

  </div>

  <div class="default-margin-top">
    {{#unless content}}
    <div class="alert alert-info">{{t 'accounts.api.desc'}}</div>
    {{/unless}}
    <ul class="list">
      {{#each content}}
      <li {{action 'openModal' 'accounts/edit_api' controller this}} {{bind-attr class=":all-click expired:alert-danger"}}>
      <div class="title">{{name}}</div>
      <div class="desc" style="font-size: 8px"><tt>{{access_token}}</tt></div>
      <small class="pull-right desc">{{t 'expires_at'}}: {{formatDate expires_at}}</small>
      <small class="desc">{{t 'created_at'}}: {{formatDate created_at}}</small>
      </li>
      {{/each}}
    </ul>
  </div>

</section>
