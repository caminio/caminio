<section>

  <h1>{{t 'accounts.users.change_password'}}</h1>
  <form class="form-horizontal" {{action 'save' on='submit'}}>
    <div class="form-group">
      <label class="control-label col-md-4">{{t 'accounts.users.cur_password'}}</label>
      <div class="col-md-8">
        {{input value=old_password class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-4">{{t 'accounts.users.new_password'}}</label>
      <div class="col-md-8">
        {{input value=password class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-md-4">{{t 'accounts.users.confirm_password'}}</label>
      <div class="col-md-8">
        {{input value=password_confirmation class="form-control"}}
      </div>
    </div>
  </form>

</section>
