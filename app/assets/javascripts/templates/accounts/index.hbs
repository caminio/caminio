<section>
  <form class="form-horizontal" {{action 'save' on='submit'}}>
    <div class="row">
      <div class="col-md-3 mini-header">{{t 'accounts.personal_data'}}</div>
      <div class="col-md-9 overflow-auto">
        <div class="form-group">
          <div class="col-md-6">
            {{input value=firstname class="form-control" placeholderTranslation='firstname'}}
          </div>
          <div class="col-md-6">
            {{input value=lastname class="form-control" placeholderTranslation='lastname'}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-4">
            {{input value=username class="form-control" placeholderTranslation='username'}}
          </div>
          <div class="col-md-8">
            {{input value=phone class="form-control" placeholderTranslation='phone'}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            {{input value=email class="form-control" placeholderTranslation='email'}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-2 col-md-offset-8 control-label">
            {{t 'language'}}
          </div>
          <div class="col-md-2">
            {{view Ember.Select2 value=locale content=availableLangs search=false prompt=false}}
          </div>
        </div>
      </div>
    </div>
    
    <div class="row row-group">
      <div class="col-md-3 mini-header">{{t 'accounts.address'}}</div>
      <div class="col-md-9">
        <div class="form-group">
          <div class="col-md-12">
            {{input value=street class="form-control" placeholderTranslation='street'}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-6">
            {{input value=zip class="form-control" placeholderTranslation='zip'}}
          </div>
          <div class="col-md-6">
            {{input value=city class="form-control" placeholderTranslation='city'}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            {{input value=state class="form-control" placeholderTranslation='state'}}
          </div>
        </div>
        <div class="form-group">
          {{view Ember.Countries value=settings.country class="col-md-12"}}
        </div>
      </div>
    </div>

    <div class="row row-group">
      <div class="col-md-3 mini-header">{{t 'accounts.avatar'}}</div>
      <div class="col-md-9">
        <div class="avatar-upload col-md-4">
          <img {{bind-attr src=avatar_thumb}} class="img-circle avatar" {{bind-attr alt=name}}>
          <input id="avatar-upload" type="file">
        </div>
        <div class="col-md-5">
          <div class="desc" style="padding-top: 40px;">{{t 'accounts.click_img_left_to_update'}}</div>
        </div>
      </div>
    </div>

  </form>
</section>
