<form class="field-row" {{action 'saveChanges' on='submit'}}>
  <div class="field-label">
    {{labelTranslation}}
  </div>
  <div {{bind-attr class=":field-content editValue:editing-click-form textarea:with-textarea"}} {{action 'edit' bubbles=false}}>
    {{#if editValue}}
    <div class="input-group">
      {{#if password}}
      {{input type='password' value=value}}
      {{else}}
      {{#if textarea}}
      {{textarea value=value}}
      {{else}}
      {{input value=value}}
      {{/if}}
      {{/if}}
      {{#unless content.isNew}}
        <div {{action 'saveChanges' bubbles=false}} {{bind-attr class=":input-group-addon :btn hasChanges:btn-primary:btn-default :save-changes-btn"}}>
          <i class="fa fa-check"></i>
        </div>
        <div class="input-group-addon btn btn-default cancel-edit" {{action 'cancelEdit' bubbles=false}} {{translateAttr title='cancel_edit_entry'}}><i class="fa fa-times"></i></div>
      {{/unless}}
    </div>
    {{else}}
    <span {{bind-attr class="hintTop:hint--top:hint--bottom :hint-bounce"}} {{translateAttr data-hint='edit_entry'}}>
      {{#if value}}
        {{value}}
      {{else}}
        <span class="desc">{{#if trPlaceholder}}{{trPlaceholder}}{{else}}{{t 'click_to_set_text'}}{{/if}}</span>
      {{/if}}
    </span>
    <div {{bind-attr class=":value-saved :label :label-warning valueSaving:active"}}>
      <i class="fa fa-refresh fa-spin"></i>
    </div>
    <div {{bind-attr class=":value-saved :label :label-success valueSaved:active"}}>
      <i class="fa fa-check"></i>
    </div>
    {{/if}}
  </div>
</form>
