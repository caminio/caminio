#account-panel.fixed

  .brand.float-left
    a.btn.toggle-side-panel.borderless.float-left.tooltip(href='#', title=t('toggle_sidebar'))
      i.fa.fa-bars
    a.tooltip.float-left(href='http://nginios.com', target='_blank', title='nginios version '+nginios.version)
      img(src='/images/brand.png')

  ul.ctrl.float-right
    li.float-right
      a.ctrl-btn.float-right.tooltip(href=resolvePath('v1/auth','logout'), title=t('logout'))
        i.fa.fa-sign-out
    li.float-right
      a.account-info.ctrl-btn.float-right(href=resolvePath('v1/auth','profile'))
        img.avatar.float-left(src='/images/avatar.png')
        span.float-left.username=currentUser.name.full



