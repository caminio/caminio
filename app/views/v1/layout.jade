html(lang=i18n.locale())
  head
    title nginio

    link(rel='stylesheet', href='/stylesheets/nginios/reset.css')
    link(rel='stylesheet', href='/stylesheets/nginios/common.css')
    link(rel='stylesheet', href='/fonts/opensans.css')
    link(rel='stylesheet', href='/stylesheets/vendor/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/vendor/tooltipster.css')

    link(rel='stylesheet', href='/stylesheets/nginios/common/panels.css')
    link(rel='stylesheet', href='/stylesheets/nginios/main.css')

    script(type='text/javascript', src='/javascripts/vendor/jquery-2.0.3.min.js')
    script(type='text/javascript', src='/javascripts/vendor/jquery.tooltipster.min.js')
    script(type='text/javascript', src='/javascripts/nginios/main.js')

    block header

  body

    block content

    script(type='text/javascript', src='/javascripts/vendor/handlebars-v1.1.2.js')
