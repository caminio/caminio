      script(type='text/javascript', src='/javascripts/vendor/ember.js')
    else
      script(type='text/javascript', src='/javascripts/vendor/ember.min.js')
    script(type='text/javascript', src='/javascripts/vendor/ember-data.js')
    
    //script(type='text/javascript', src='/javascripts/nginios/app.js')
    //each app in getApplicationsForUser()
    //  script(type='text/javascript', src='/gears/'+app.name.toLowerCase()+'.js')

    if( handlebarTemplates )
      each hbs in handlebarTemplates
        script(type='text/x-handlebars', id=(hbs.id ? hbs.id : null), data-template-name=(hbs.id ? null : hbs.name) )!{getHbsFileContent(hbs.filename)}
    
    block footer

